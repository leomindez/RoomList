<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/medium_margin"
    android:orientation="vertical"
    tools:context="com.leomendez.roomlist.view.ToDoFragment">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/todo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/to_do_dialog_title"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_padding"
        >
        <android.support.design.widget.TextInputEditText
            android:id="@+id/to_do_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/to_do_dialog_date"
            />
    </android.support.design.widget.TextInputLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save_todo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:padding="@dimen/medium_padding"
        android:text="@string/to_do_dialog_save_btn"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        />

</LinearLayout>
